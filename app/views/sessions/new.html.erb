<div class="page-header">
  <h1>Please Login</h1>
</div>

<% if flash[:alert] %>
  <div class="alert alert-error">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_tag login_path, class: "form-horizontal" do %>
  <div class="control-group">
    <%= label_tag :name, "Name", class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :name, nil, class: "input-xlarge" %>
    </div>
  </div>
  <div class="control=group">
    <%= label_tag 'password' ,'Password', class: "control-label" %>
    <div class="controls">
      <%= password_field_tag :password, nil, class: "input-xlarge" %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag "Login", class: 'btn btn-primary'%>
  </div>
<% end %>
