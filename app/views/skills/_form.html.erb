<%= form_for(@skill, html: {class: "form-horizontal"}) do |f| %>
  <% if @skill.errors.any? %>
    <fieldset id="error_explanation" class="control-group error">
      <legend><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</legend>
      <ul>
      <% @skill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </fieldset>
  <% end %>
  
  <div class="control-group">
    <%= f.label :blz_ID, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :blz_id %>
    </div>  
  </div>
  
  <div class="control-group">
    <%= f.label :title_cn, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :title_cn %>
    </div>  
  </div>
  
    <div class="control-group">
    <%= f.label :title_en, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :title_en %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :description %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :hit_rate, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :hit_rate %>
    </div>  
  </div>
  
  <div class="control-group">
    <%= f.label :category, class: "control-label" %>
    <div class="controls">
      <%= f.select :category_id, options_of_categories  %>
    </div>  
  </div>
  
  <div class="control-group">
    <%= f.label :cd, class: "control-label" %>
    <div class="controls">
      <%= f.number_field :cd  %>
    </div>  
  </div>
  
  <div class="control-group">
    <%= f.label :status, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :status %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :comments, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :comments, :rows => 3 %>
    </div>  
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
