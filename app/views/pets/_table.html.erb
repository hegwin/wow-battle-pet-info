<%= paginate @pets %>
<table class="table table-striped">
  <tr>
    <th>Icon</th>
    <th>Title cn</th>
    <th>Skills</th>
    <th>Source</th>
    <th>Special</th>
    <th>Category</th>
    <th>Data Status</th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= image_tag pet.icon_url,:style => "height: 24px" %></td>
    <td><%= link_to pet.title_cn, pet %></td>
    <td>
      <% pet.skills.each do |skill| %>
        <%= link_to image_tag("skills/#{skill.blz_id}.jpg", size: "24x24"), skill_path(skill), rel: 'popover', "data-content" => skill.description.gsub("\n", '<br />'), "data-original-title" => skill.title_cn %>
      <% end %>
    </td>
    <td><%= pet.source %></td>
    <td>Normal</td>
    <td><%= image_tag "#{pet.category.icon_url}", size: "24x24" %></td>
    <td><%= reviewed_label pet.reviewed %></td>
  </tr>
<% end %>
</table>
<%= paginate @pets %>
